!!!
%html
  %head
    %title
      = Settings.site_title ? Settings.site_title : 'DemocracyWatcher'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_tag do
      I18n.defaultLocale = "#{I18n.default_locale}"; I18n.locale = "#{I18n.locale}"; I18n.fallbacks = true;
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    - if notice
      %p.notice
        = notice
    - if alert
      %p.alert
        = alert
    = yield